	"ccp": {
		"prefix": "ccp",
		"body": [
			"/* Funciones de captura */",
			"void capturar_flotante(float *flotante)",
			"{",
			"    printf(\"Introduce un número flotante: \");",
			"    scanf(\"%f\", flotante);",
			"    while(getchar() != '\\n'); /* Limpia el buffer de entrada */",
			"}",
			"",
			"void capturar_entero(int *entero)",
			"{",
			"    printf(\"Introduce un número entero: \");",
			"    scanf(\"%d\", entero);",
			"    while(getchar() != '\\n'); /* Limpia el buffer de entrada */",
			"}"
		],
		"description": "Funciones para capturar datos (flotantes e enteros) desde la terminal."
	},
